            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
            app:text="view" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
            app:text="jetpack" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag6"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
            app:text="dart" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag7"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
            app:text="reactivex" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag8"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
            app:text="null-safety" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag9"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="0dp"
            app:text="android" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag10"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
            app:text="kotlin" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
            app:text="java" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag12"
            android:layout_width="wrap_content"
