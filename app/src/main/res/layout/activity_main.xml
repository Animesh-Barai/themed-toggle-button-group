            app:text="jetpack" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag14"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
            app:text="dart" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/tag15"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/sapphire"
            app:textPaddingHorizontal="12dp"
            app:textPaddingVertical="3dp"
