<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup
        android:id="@+id/toggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="30dp"
        android:background="@color/sapphire"
        app:justifyContent="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnVeryHappy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:btnCornerRadius="15dp"
            app:highlightBackgroundColor="@color/lavender"
            app:highLightTextColor="@color/sapphire"
            app:backgroundColor="@color/sapphire"
            app:textColor="@color/lavender"
            app:icon="@drawable/ic_sentiment_very_satisfied_black_24dp"
            app:iconPadding="60dp"/>

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnHappy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:btnCornerRadius="15dp"
            app:highlightBackgroundColor="@color/lavender"
            app:highLightTextColor="@color/sapphire"
            app:backgroundColor="@color/sapphire"
            app:textColor="@color/lavender"
            app:icon="@drawable/ic_sentiment_satisfied_black_24dp"
            app:iconPadding="60dp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnNeutral"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:btnCornerRadius="15dp"
            app:highlightBackgroundColor="@color/lavender"
            app:highLightTextColor="@color/sapphire"
            app:backgroundColor="@color/sapphire"
            app:textColor="@color/lavender"
            app:icon="@drawable/ic_sentiment_neutral_black_24dp"
            app:iconPadding="60dp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnDissatisfied"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:btnCornerRadius="15dp"
            app:highlightBackgroundColor="@color/lavender"
            app:highLightTextColor="@color/sapphire"
            app:backgroundColor="@color/sapphire"
            app:textColor="@color/lavender"
            app:icon="@drawable/ic_sentiment_dissatisfied_black_24dp"
            app:iconPadding="60dp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:btnCornerRadius="15dp"
            app:highlightBackgroundColor="@color/lavender"
            app:highLightTextColor="@color/sapphire"
            app:backgroundColor="@color/sapphire"
            app:textColor="@color/lavender"
            app:icon="@drawable/ic_sentiment_very_dissatisfied_black_24dp"
            app:iconPadding="60dp"/>

    </nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup>

    <nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup
        android:id="@+id/weekdays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:justifyContent="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleGroup">

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMemory232"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:circularCornerRadius="true"
            app:text="S" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMultipleChoice22"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:circularCornerRadius="true"
            app:text="M" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnTyped22"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:circularCornerRadius="true"
            app:text="T" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMemory22"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:circularCornerRadius="true"
            app:text="W" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMemory21332"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:circularCornerRadius="true"
            app:text="T" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMemory2332"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:circularCornerRadius="true"
            app:text="F" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMemory231342"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:circularCornerRadius="true"
            app:text="S" />

    </nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup>

    <nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:justifyContent="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weekdays">

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMultipleChoice2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:paddingHorizontal="18dp"
            app:paddingVertical="7dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/denim"
            app:text="5:30PM" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnTyped2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:paddingHorizontal="18dp"
            app:paddingVertical="7dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/denim"
            app:text="7:30PM" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMemory2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:paddingHorizontal="18dp"
            app:paddingVertical="7dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/denim"
            app:text="8:00PM" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMemory23"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:paddingHorizontal="18dp"
            app:paddingVertical="7dp"
            app:circularCornerRadius="true"
            app:highlightBackgroundColor="@color/denim"
            app:text="9:00PM" />

    </nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup>

</androidx.constraintlayout.widget.ConstraintLayout>