<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:justifyContent="space_evenly"
    app:flexDirection="column"
    tools:context=".MainActivity">

    <nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:justifyContent="center"
        app:layout_constraintBottom_toTopOf="@+id/tags"
        app:layout_constraintTop_toTopOf="parent">

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMultipleChoice"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:layout_margin="5dp"
            app:highlightBackgroundColor="@color/lavender"
            app:highLightTextColor="@color/sapphire"
            app:backgroundColor="@color/sapphire"
            app:textColor="@color/lavender"
            app:padding="10dp"
            app:iconPadding="50dp"
            app:textPaddingVertical="13dp"
            app:btnCornerRadius="10dp"
            app:icon="@drawable/ic_check_circle_outline_24px"
            app:iconGravity="top|center"
            app:text="Multiple choice"
            app:textGravity="bottom|center" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnTyped"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:layout_margin="5dp"
            app:highlightBackgroundColor="@color/lavender"
            app:highLightTextColor="@color/sapphire"
            app:backgroundColor="@color/sapphire"
            app:textColor="@color/lavender"
            app:padding="10dp"
            app:iconPadding="50dp"
            app:textPaddingVertical="13dp"
            app:btnCornerRadius="10dp"
            app:icon="@drawable/ic_spellcheck_24px"
            app:iconGravity="top|center"
            app:text="Typewriter mode"
            app:textGravity="bottom|center"/>

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btnMemory"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:layout_margin="5dp"
            app:highlightBackgroundColor="@color/lavender"
            app:highLightTextColor="@color/sapphire"
            app:backgroundColor="@color/sapphire"
            app:textColor="@color/lavender"
            app:padding="10dp"
            app:iconPadding="50dp"
            app:textPaddingVertical="13dp"
            app:btnCornerRadius="10dp"
            app:icon="@drawable/ic_brain"
            app:iconGravity="top|center"
            app:text="Memory mode"
            app:textGravity="bottom|center"/>

    </nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup>

    <nl.bryanderidder.themedtogglebuttongroup.ThemedButtonGroup
